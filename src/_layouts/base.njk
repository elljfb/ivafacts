  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:locale" content="en_GB">
  <meta property="og:site_name" content="IVA Facts">
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content="https://ivafacts.co.uk{{ page.url }}">
  <meta name="twitter:title" content="{% if isHomepage %}{{ title }}{% else %}{{ title }} | IVA Facts{% endif %}">
  <meta name="twitter:description" content="{{ description or 'Free, impartial information about Individual Voluntary Arrangements (IVAs) and debt solutions in the UK.' }}">
  <meta name="twitter:image" content="https://ivafacts.co.uk/images/iva-facts.jpg">
  
  <!-- Favicons -->
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
  <link rel="manifest" href="/site.webmanifest">
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@500;700;800&display=swap" rel="stylesheet">
  

  <link rel="stylesheet" href="/css/style.css">

