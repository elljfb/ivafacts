     crossorigin="anonymous"></script>

  {% if canonicalUrl %}
  <link rel="canonical" href="{{ canonicalUrl }}">
  {% endif %}
</head>
<body>
  {% include "header.njk" %}
  
  <main>
    {{ content | safe }}
  </main>
  
  {% include "footer.njk" %}
  
